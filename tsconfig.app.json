{
  "compilerOptions": {
    /* Core */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Projectâ€‘reference requirement */
    "composite": true,

    /* Bundler / Vite */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Emit must be allowed for a referenced project */
    "noEmit": false,

    /* React */
    "jsx": "react-jsx",

    /* Linting preferences */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Misc */
    "skipLibCheck": true
  },
  "include": ["src"]
}
